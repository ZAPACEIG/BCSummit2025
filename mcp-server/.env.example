# Business Central OAuth Configuration
BC_CLIENT_ID=your-client-id-here
BC_CLIENT_SECRET=your-client-secret-here
BC_TENANT_ID=your-tenant-id-here
OAUTH_SCOPE=https://api.businesscentral.dynamics.com/.default

# Business Central API Configuration
BC_BASE_URL=https://api.businesscentral.dynamics.com
BC_ENVIRONMENT=Production
BC_COMPANY_ID=your-company-guid-here
BC_API_VERSION=v2.0

# Server Configuration
PORT=3000
NODE_ENV=production

# Performance Settings (optimized like Test server)
REQUEST_TIMEOUT_MS=30000
CACHE_TTL_SECONDS=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL_MS=30000
